{
  "name": "@nuicoder/neko-ui",
  "version": "0.1.0",
  "private": false,
  "exports": {
    "./*": "./src/*.tsx",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/style.css",
    "./themes/neko-orange.css": "./dist/themes/neko-orange.css",
    "./themes/neko-lavender.css": "./dist/themes/neko-lavender.css",
    "./themes/neko-pink.css": "./dist/themes/neko-pink.css",
    "./themes/neko-mint.css": "./dist/themes/neko-mint.css",
    "./themes/neko-neutral.css": "./dist/themes/neko-neutral.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "build:css": "postcss src/styles/style.css -o dist/style.css",
    "build:themes": "npm run build:lavender && npm run build:mint && npm run build:orange && npm run build:pink && npm run build:neutral",
    "build:lavender": "postcss src/styles/themes/neko-lavender.css -o dist/themes/neko-lavender.css",
    "build:mint": "postcss src/styles/themes/neko-mint.css -o dist/themes/neko-mint.css",
    "build:orange": "postcss src/styles/themes/neko-orange.css -o dist/themes/neko-orange.css",
    "build:pink": "postcss src/styles/themes/neko-pink.css -o dist/themes/neko-pink.css",
    "build:neutral": "postcss src/styles/themes/neko-neutral.css -o dist/themes/neko-neutral.css",
    "build:all": "pnpm build && pnpm build:css",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.0",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-plugin-storybook": "9.0.14",
    "playwright": "^1.53.1",
    "postcss-cli": "^11.0.1",
    "tsup": "^8.5.0",
    "typescript": "5.8.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-toggle-group": "^1.1.10",
    "sonner": "^2.0.6",
    "next-themes": "^0.4.6",
    "cmdk": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "clsx": "^2.1.1",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.525.0",
    "postcss": "^8.5.6",
    "react-day-picker": "^9.8.0",
    "embla-carousel-react": "^8.6.0",
    "vaul": "^1.1.2"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
